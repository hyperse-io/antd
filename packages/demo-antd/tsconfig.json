{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "noImplicitAny": false,
    "noEmit": false,
    "incremental": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "**/.*/", "dist", "build", "public"]
}
