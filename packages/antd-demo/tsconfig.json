{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "noImplicitAny": false,
    "noEmit": false,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@kzfoo/react": ["../react/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "**/.*/", "dist", "build", "public"]
}
